<!-- Modal s'inscrire -->
<div class="modal fade" id="inscription" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">S'identifier</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

          <form action="/users/Create" method="post" accept-charset="utf-8" class="form" role="form" enctype="multipart/form-data">
              @Html.AntiForgeryToken()
              <div class="row">
                  <div class="col-xs-6 col-md-6">
                      <input type="text" name="username" value="" class="form-control input-lg" placeholder="username" />
                  </div>
                  <div class="col-xs-6 col-md-6">
                      <input class="bnt btn-primary" type="file" name="image" required />
                  </div>
              </div>
              <br>
              <input type="text" name="email" value="" class="form-control input-lg" placeholder="Email" />
              <br>
              <input type="password" name="pwd" value="" class="form-control input-lg" placeholder="Mot de passe" />
              <br>

              <input type="text" name="adresse" value="" class="form-control input-lg" placeholder="adresse" />
              <br>
              <br>

              <input type="text" name="tel" value="" class="form-control input-lg" placeholder="telephone" />
              <br>
              <input type="text" name="cbc" value="" class="form-control input-lg" placeholder="code bancaire" />
              <br>

              <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  <input type="submit" class="btn btn-primary" value="Créer un compte">
              </div>
          </form>
</div>
  </div>
</div>
</div>

