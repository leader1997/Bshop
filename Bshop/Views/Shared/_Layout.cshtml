                            <tr>
                        </table>


                    </form>


                </div>
                @if (Session["user"] != null)
                {
                    user u = (user)Session["user"];
                    if (u.email == "admin@gmail.com")
                    {
                        <a href="/livres/Index" role="button" class="btn btn-bd-inscrire mx-1">gestion livres</a>
                        <a href="/users/Index" role="button" class="btn btn-bd-inscrire mx-1">gestion utilisateurs</a>
                        
                        
                    }
                }
                @if (Session["user"] != null)
                {
                    user u = (user)Session["user"];
            <a href="/home/panier"><img height="50px" width="50" src="/fonts/panier.png" /></a>
                    <a href="/users/Details/@u.Id" class="btn btn-success" style="margin-top:10px;margin-left:5px;">@u.username</a>


